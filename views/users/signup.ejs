<% layout("/layouts/boilerplate") %>

<div class="row mt-3">
    <h1 class="col-6 offset-4">SignUp on Wanderlust</h1>
    <div class="col-6 offset-3">
        <form method="POST" action="/signup" class="needs-validation" novalidate>
            <div class="mb-3"> 
                <label for="username" class="form-label">Title</label>
                <input name="username" id = "username" placeholder="enter username" type="text" class="form-control" required>
                <div class="valid-feedback">Username looks Prefect!</div>
            </div>
            <div class="mb-3"> 
                <label for="email" class="form-label">Email</label>
                <input name="email" id = "email" placeholder="enter Email" type="text" class="form-control" required>
            </div>
            <div class="mb-3"> 
                <label for="password" class="form-label">Password</label>
                <input name="password" id = "password" placeholder="enter Password" type="text" class="form-control" required>
            </div>
            <button class="btn btn-dark signupbtn">Signup</button>
        </form>
    </div>
</div>