<% layout("/layouts/boilerplate") %>
<div class="row">
    <div class="col-8 offset-2">
        <br><br>
        <h3>Create a New Listing</h3>
    <form method="POST" action="/listings" class="needs-validation" novalidate enctype="multipart/form-data">
        <div class="mb-3"> 
            <label for="title" class="form-label">Title</label>
        <!-- here we are creating the listing object which we can use directly in the backend -->
            <input name="listing[title]" placeholder="enter title" type="text" class="form-control" required>
            <div class="valid-feedback">Title looks Prefect!</div>
        </div>
        
        <div class="mb-3">
            <label for="description" class="form-label">Description</label>
        <!-- here we are creating the listing object which we can use directly in the backend -->
            <textarea name="listing[description]" placeholder="enter description" type="text" class="form-control" required></textarea>
            <div class="invalid-feedback">Please enter a short description about listing</div>
        </div>
        <div class="mb-3">
            <label for="image" class="form-label">Upload Listing Image</label>
        <!-- here we are creating the listing object which we can use directly in the backend -->
            <input name="listing[Image]" type="file" class="form-control" required>
        </div>
        <div class="row">
            <div class="mb-3 col-md-4">
                <label for="price" class="form-label">Price</label>
            <!-- here we are creating the listing object which we can use directly in the backend -->
                <input name="listing[price]" placeholder="enter price"  value="1200" class="form-control" required>
            <div class="invalid-feedback">Price should be Valid</div>
                
            </div>
            <div  class="mb-3 col-md-8">
                <label for="location" class="form-label">Location</label>
            <!-- here we are creating the listing object which we can use directly in the backend -->
                <input name="listing[location]" placeholder="enter location" type="text" class="form-control" required>
             <div class="invalid-feedback">Please enter a valid Location</div>
                
            </div>
        </div>
       
        <div class="mb-3">
            <label for="country" class="form-label">Country</label>
        <!-- here we are creating the listing object which we can use directly in the backend -->
            <input name="listing[country]" placeholder="enter country" type="text" class="form-control" required>
            <div class="invalid-feedback">Country name should be valid</div>
            
        </div>
        <button class="btn btn-dark pos">Add New LIsting</button>
        <br><br>
    </form>

    </div>
</div>
    