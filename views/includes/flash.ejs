<!-- here we are checking length also becuse success is an array it always exist so we need to check for array and its length -->
<% if(success && success.length) { %>
    <div class="alert alert-success alert-dismissible fade show mt-3 col-6 offset-3" role="alert">
        <%= success %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
      </div>
<%}%>

<% if(error && error.length) { %>
    <div class="alert alert-danger alert-dismissible fade show mt-3 col-6 offset-3" role="alert">
        <%= error %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
      </div>
<%}%>
